---
import RootLayout from './RootLayout.astro';

import Footer from '../components/LayoutUI/Footer.astro';
import Header from '../components/LayoutUI/Header.astro';
import CurrentPathOnSSG from '../components/LayoutUI/CurrentPathOnSSG.astro';
import BackToTop from '../components/LayoutUI/BackToTop.vue';

interface Props {
  anotherFavicon?: string;
  hideCurrentPath?: boolean;
  ogType?: string;
}

const {
  ogType = 'website',
  hideCurrentPath = false,
  anotherFavicon = '/hotlink-ok/icons/favicon.png'
} = Astro.props;
---

<RootLayout anotherFavicon={anotherFavicon} ogType={ogType}>
  <Header />
  <div class="slotDiv">
    {!hideCurrentPath && <CurrentPathOnSSG />}
    <div data-pagefind-body>
      <slot />
    </div>
  </div>
  <Footer />
  <BackToTop client:load />
</RootLayout>

<style lang="scss">
  .slotDiv {
    margin: 40px 12px;
  }
</style>
